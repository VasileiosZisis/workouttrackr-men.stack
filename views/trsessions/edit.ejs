<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <title>Edit <%= trsession.slugSession %></title>
</head>

<body>

    <%- include('../partials/navbar.ejs') %>

    <main>
        <div class="h1-container margin-1">
            <h1>Edit Session <%= trsession.slugSession %></h1>
        </div>
        <div class="form-container">
            <form
                action="/logs/<%= log.slugLog %>/exercises/<%= exercise.slugExercise %>/trsessions/<%= trsession.slugSession %>?_method=PUT"
                method="POST">
                <div class="form-contents">
                    <div>
                        <label for="createdDate">Date:</label>
                        <input type="date" id="createdDate" name="createdDate">
                    </div>
                    <div id="div-set">
                        <% for(let [i,set] of trsession.weights.entries()){%>
                        <div class="sets">
                            <h3 class="margin-1">
                                Set <%=[i + 1] %>
                            </h3>
                            <div class="form-contents margin-1">
                                <div>
                                    <label for="repetitions">Repetitions</label>
                                    <input type="number" id="repetitions" name="weights[<%= [i] %>][repetitions]"
                                        value="<%= set.repetitions %>">
                                </div>
                                <div>
                                    <label for="kilograms">Kilograms</label>
                                    <input type="number" id="kilograms" name="weights[<%= [i] %>][kilograms]"
                                        value="<%= set.kilograms %>">
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="flex-row margin-1">
                    <div class="link-container">
                        <button class="link" type="button" id="delete-set">Delete Set</button>
                    </div>
                    <div class="link-container">
                        <button class="link" type="button" id="add-set">Add Set</button>
                    </div>
                </div>
                <div class="flex-row margin-1">
                    <div class="link-container">
                        <a class="link"
                            href="/logs/<%= log.slugLog %>/exercises/<%= exercise.slugExercise %>/trsessions/<%= trsession.slugSession %>">Cancel</a>
                    </div>
                    <div class="link-container">
                        <button class="button">Update Session</button>
                    </div>
                </div>
            </form>
        </div>
    </main>
    <script src="/javascripts/defaultDate.js"></script>
    <script src="/javascripts/trsessionsEdit.js"></script>
</body>

</html>