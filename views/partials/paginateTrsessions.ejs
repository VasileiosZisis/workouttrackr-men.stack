<div class="pagination-container">
    <nav aria-label="Sessions Pagination">
        <ul class="pagination">
            <% if (currentPage == totalPages && totalPages > 1) { %>
            <li class="page-item">
                <a class="page-link"
                    href="/logs/<%= log.slugLog %>/exercises/<%= exercise.slugExercise %>?page=<%= parseInt(currentPage) -1 %>"><span
                        area-hidden="true">&laquo;</span></a>
            </li>
            <% } %>
            <% if(totalPages > 1 && totalDocuments) { %>
            <% for(let i = startPage; i <= endPage; i++) { %>
            <li class="page-item">
                <a class="page-link"
                    href="/logs/<%= log.slugLog %>/exercises/<%= exercise.slugExercise %>?page=<%= i %>"
                    <%= i === parseInt(currentPage) ? 'style=color:#000000' : '' %>><%= i %></a>
            </li>
            <% } %>
            <% } %>
            <% if(currentPage == 1 && totalPages > 1) { %>
            <li class="page-item">
                <a class="page-link"
                    href="/logs/<%= log.slugLog %>/exercises/<%= exercise.slugExercise %>?page=<%= parseInt(currentPage) + 1 %>"><span
                        area-hidden="true">&raquo;</span></a>
            </li>
            <% } %>
        </ul>
    </nav>
</div>