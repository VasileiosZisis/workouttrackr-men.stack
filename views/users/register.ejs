<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/flash.css">
    <title>Register Page</title>
</head>

<body>
    <%- include('../partials/navbar.ejs') %>
    <%- include('../partials/flash.ejs') %>
    <main>
        <% if(!currentUser) { %>
        <form action="/register" method="POST" class="login-form">
            <div>
                <div>
                    <h3>
                        <label for="username">Username</label>
                    </h3>
                </div>
                <div>
                    <input type="text" id="username" name="username" required autofocus>
                </div>
            </div>
            <div>
                <div>
                    <h3>
                        <label for="email">Email</label>
                    </h3>
                </div>
                <div>
                    <input type="email" name="email" id="email" required>
                </div>
            </div>
            <div>
                <div>
                    <h3>
                        <label for="password">Password</label>
                    </h3>
                </div>
                <div>
                    <input type="password" name="password" id="password" pattern=".{6,}"
                        title="At least 6 characters long" required>
                </div>
            </div>
            <div class="margin-1">
                <button class="button" type="submit" value="Submit">Register</button>
            </div>
        </form>
        <% } else { %>
        <p class="main-p">You are already registered.</p>
        <% } %>
    </main>
    <script src="/javascripts/main.js"></script>
</body>

</html>